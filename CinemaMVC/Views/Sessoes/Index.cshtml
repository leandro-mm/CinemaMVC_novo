@model IEnumerable<CinemaMVC.Models.vwSessao>

@{
    ViewBag.Title = "Lista de Sessões";
}

<div class="row">
    <div class="col-sm-6">
        <h3>@ViewBag.Title</h3>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Filmes")">Filmes</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-6">
        <div style="text-align:right; padding-top:20px">
            @Html.ActionLink("Adicionar Sessão", "Create", null, new { @class = "btn btn-success btn-sm" })
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HorarioInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HorarioFim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorIngresso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeFilme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sala)
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HorarioInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HorarioFim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorIngresso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeFilme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sala)
        </td>        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SessaoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SessaoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SessaoID })
        </td>
    </tr>
}

</table>
