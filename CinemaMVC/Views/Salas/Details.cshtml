@model CinemaMVC.Models.Sala

@{
    ViewBag.Title = "Detalhes Sala";
}


<div class="row">
    <div class="col-sm-6">
        <h3>@ViewBag.Title</h3>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Sessoes")">Sessões</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Filmes")">Filmes</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>



<div class="form-horizontal">
    <div class="col-md-offset-2 row">


        <div class="form-group">
            @Html.Label("Nome", "Nome", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("QtdAssentos", "Qtd Assentos", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QtdAssentos, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("audioAnimacao", "Áudio/Animação", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var item in CinemaMVC.Helpers.SalaHelper.GetTipoAudioAnimacao(new CinemaMVC.Models.Sala(){ SalaID= Model.SalaID }))
                {
                    <span>@item</span>
                    <br />
                }
            </div>
        </div>

        <div class="form-group">
            @Html.Label("sessoes", "Sessões Vinculadas", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <fieldset>
                    @foreach (var item in CinemaMVC.Helpers.SessaoHelper.GetSessoesBySalaID(Model.SalaID))
                    {
                        <span>@item</span>
                        <br />
                    }
                </fieldset>
            </div>
        </div>





    </div>
    <div class="text-center">
        <div class="form-group">

            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-warning" })
            @Html.ActionLink("Editar", "Edit", "Filmes", new { id = Model.SalaID }, new { @class = "btn btn-primary" })
            <button onclick="ptint()" class="btn btn-info">Imprimir</button>
        </div>

    </div>
</div>
       

    @section Scripts {

        <script>

            function ptint() {
                Swal.fire({
                    icon: 'info',
                    title: 'Aviso',
                    text: 'Não Implementado'
                })
            }
        </script>
    }
