@model CinemaMVC.Models.Sala

@{
    ViewBag.Title = "Deletar Sala";
}

<div class="row">
    <div class="col-sm-6">
        <h3>@ViewBag.Title</h3>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Sessoes")">Sessões</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Filmes")">Filmes</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
<h3>Are you sure you want to delete this?</h3>
<hr />


<div class="form-horizontal">


    <div class="form-group">
        @Html.Label("Nome", "Nome", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("QtdAssentos", "Qtd Assentos", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.QtdAssentos, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("audioAnimacao", "Áudio", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="w3-container w3-border w3-round-xlarge">
                @foreach (var item in CinemaMVC.Helpers.SalaHelper.GetTipoAudioBySalaID(Model.SalaID))
                {
                    <a href="@Url.Action("Details","TiposAudio",new {id=item.TipoAudioID})">@item.Descricao</a>

                    <br />
                }
                <p style="color:white">I have rounded borders.</p>
            </div>
            </div>
        </div>

    <div class="form-group">
        @Html.Label("Animacao", "Animação", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="w3-container w3-border w3-round-xlarge">
                @foreach (var item in CinemaMVC.Helpers.SalaHelper.GetTipoAnimacaoBySalaID(Model.SalaID))
                {
                    <a href="@Url.Action("Details","TiposAnimacao",new {id=item.TipoAnimacaoID})">@item.Descricao</a>

                    <br />
                }
                <p style="color:white">I have rounded borders.</p>
            </div>
            </div>
        </div>

    <div class="form-group">
        @Html.Label("sessoes", "Sessões Vinculadas", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="w3-container w3-border w3-round-xlarge">
                @foreach (var item in CinemaMVC.Helpers.SessaoHelper.GetSessoesBySalaID(Model.SalaID).OrderBy(s => s.Data).ThenBy(s => s.HorarioInicio))
                {
                    <a href="@Url.Action("Details","Sessoes",new {id=item.SessaoID})">@item.Data.ToShortDateString()</a>
                    <span>das @item.HorarioInicio às @item.HorarioFim</span>
                    <br />
                }
                <p style="color:white">I have rounded borders.</p>
            </div>
        </div>
    </div>






    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="text-center">
            <div class="form-group">
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-warning" })
                <input type="submit" value="Deletar" class="btn btn-danger" />
            </div>
        </div>

    }


</div>
